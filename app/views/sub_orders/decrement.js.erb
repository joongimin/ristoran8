<% if !@sub_order.nil? %>
  var sub_order = $("#sub_order_<%= @sub_order.id %>");
  sub_order.find("td.count").text(<%= @sub_order.count %>);
  <% if @sub_order.count == 1 %>
    sub_order.find("a.link_decrement").data("confirm", "<%= I18n.t("menu_items.confirm_delete", :menu_item => @sub_order.menu_item.name) %>");
  <% else %>
    sub_order.find("a.link_decrement").removeAttr("data-confirm");
  <% end %>
<% else %>
  $("#sub_order_<%= @sub_order_id %>").remove();
  <% if @current_table.active_order.sub_orders.empty? %>
    var $active_order = $("#active_order");
    $active_order.find("div.sub_orders").remove();
    $active_order.append("<%= t("orders.no_order") %>");
  <% end %>
<% end %>